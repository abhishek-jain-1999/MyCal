<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="me.vable.android.mycal.MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@android:color/holo_red_light"
            android:textSize="36sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1.5"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/t2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="textEnd"
            android:textSize="36sp" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ce"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="fc"
            android:text="CE"
            android:textSize="24sp" />

        <Button
            android:id="@+id/C"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="fca"
            android:text="Clear"
            android:textSize="24sp" />

        <Button
            android:id="@+id/sub"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="fs"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Div"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="fd"
            android:text="/"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b7"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f7"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b8"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f8"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b9"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f9"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/mul"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="fm"
            android:text="X"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b4"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f4"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b5"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f5"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b6"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f6"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Add"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="fa"
            android:text="+"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/b1"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f1"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b2"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f2"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/b3"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f3"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/exp"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="fex"
            android:text="^"
            android:textSize="30sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/z2"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f00"
            android:text="00"
            android:textSize="24sp" />

        <Button
            android:id="@+id/z"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f0"
            android:text="0"
            android:textSize="24sp" />

        <Button
            android:id="@+id/z3"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="f000"
            android:text="000"
            android:textSize="24sp" />

        <Button
            android:id="@+id/E"
            style="@android:style/Widget.Material.Button"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="fe"
            android:text="="
            android:textSize="36sp" />

    </LinearLayout>

</LinearLayout>
